type Role {
  id: ID! @id
  title: String!
  content: String
  status: String!
  user: User
}

type Project {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  isPublic: Boolean! @default(value: false)
  title: String!
  content: String
  author: User! @relation(link: TABLE)
  location: String!
  city: String!
  country: String!
  genres: [String!] @scalarList(strategy: RELATION)
  artists: [String!] @scalarList(strategy: RELATION)
  links: [String!] @scalarList(strategy: RELATION)
  roles: [Role!]
  status: String!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String
  projects: [Project!]
  conversations: [Conversation!]
}

type Conversation {
  id: ID!  @id
  name: String!
  messages: [Message!]
  users: [User!] @relation(link: TABLE)
  project: Project @relation(link: TABLE)
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
}

type Message {
  id: ID!  @id
  author: User
  content: String!
  conversation: Conversation! @relation(link: TABLE)
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
}
